  "name": "ar-io-node",
  "description": "The AR.IO gateway core service",
  "type": "module",
  "main": "./dist/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ar-io/ar-io-node"
  },
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "arbundles": "^0.6.19",
    "arweave": "^1.14.4",
